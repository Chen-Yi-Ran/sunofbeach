<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    android:background="@drawable/shape_white_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@mipmap/ic_close"
        android:scaleType="center"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/ic_checked_tpsd"
        android:drawablePadding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="淘口令已复制"/>
    <TextView
        android:id="@+id/tv_tpwd"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="￥xhQoYC66sMX￥"
        android:textSize="@dimen/sp_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_grey_background"
        android:gravity="center"
        android:padding="@dimen/dp_10"/>

    <Button
        android:id="@+id/btn_open_taobao"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_tpwd"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_34"
        android:layout_marginTop="@dimen/dp_30"
        android:background="@drawable/red_solid_btn_selector"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        tools:text="打开淘宝"
        android:textColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>